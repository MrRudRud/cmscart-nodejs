<%- include('../_layouts/adminheader') %>

    <h2 class="page-title">Pages</h2>
    <a href="/admin/pages/add-page" class="btn btn-primary">Add a New Page</a>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        <!-- Loop through the pages -->
        <% pages.forEach( (page) => { %>
        <tr>
            <td><%= page.title %></td>
            <td><a href="/admin/pages/edit-page/<%= page.slug %>" class="btn btn-warning">Edit</a></td>
            <% if(page.slug == "home") { %>
                <td></td>
            <% } else { %>
            <td><a href="/admin/pages/edit-page/<%= page.slug %>" class="btn btn-danger">Delete</a></td>
            <% } %>
        </tr>
        <% });%>
        </tbody>
    </table>

<%- include('../_layouts/adminfooter') %>